.project{:class => parameterize_language(project.main_language), :data => {:id => project.id}}
  - if defined?(show_avatar) && show_avatar
    = link_to image_tag(avatar_url(project), :width => 80, :height => 80), project.github_url, :rel => 'tooltip', :data => { :original_title => project.name }, :class => 'image'
  .language.label.label-info.pull-right
    = link_to project.main_language, language_path(project.main_language.downcase)

  = link_to project.github_url, :target => "_blank", :title => project.github_repository, :class => "project-link" do
    %span.project-title= project.name
    %p.js-emoji= project.description

  - project.labels.each do |label|
    .project-label
      %span.octicon.octicon-tag
      = label.name

  - if project.contribulator?
    = link_to "Contribulator score #{project.contribulator}", project.contribulator_url, class: 'label label-info', target: '_blank'
